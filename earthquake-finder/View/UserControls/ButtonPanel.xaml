<UserControl x:Class="earthquake_finder.View.UserControls.ButtonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:userControls="clr-namespace:earthquake_finder.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions >
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="Grid">
                <Setter Property="Margin" Value="10"/>
            </Style>
        </Grid.Resources>

        <Button Name="btnHour" Grid.Column="0" Content="Past hour" Click="btnHour_Click"  Style="{StaticResource SelectedButton}"/>
        <Button Name="btnDay" Grid.Column="1" Content="Past day" Click="btnDay_Click"/>
        <Button Name="btnWeek" Grid.Column="2" Content="Past week" Click="btnWeek_Click"/>
        <Button Name="btnMonth" Grid.Column="3" Content="Past month" Click="btnMonth_Click"/>
    </Grid>
</UserControl>
